@model List<Product>
@{
    ViewData["Title"] = "Products By Sub-Category";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Products By Sub-Category</h2>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <img class="card-img-top" src="@product.ImageUrl" alt="@product.Name">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">$@product.Price</p>
                        <p class="card-text">@(product.StockQuantity > 0 ? "In Stock" : "Out of Stock")</p>
                        <p class="card-text">Stock Quantity: @product.StockQuantity</p>
                        <button class="btn btn-primary add-to-cart-btn" data-product-id="@product.ProductId">
                            Add to Cart
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
