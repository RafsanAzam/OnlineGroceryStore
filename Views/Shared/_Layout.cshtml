<!DOCTYPE html>
<html lang="en">
<head>
    @RenderSection("Styles", required: false)
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineGroceryStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineGroceryStore.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>



</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/Logo/uts-mart-logo-zip-file/svg/logo-no-background.svg" alt="Online Grocery Store Logo">
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <form class="form-inline my-2 my-lg-0 d-flex align-items-center" asp-controller="Products" asp-action="Search" method="get">
                            <input class="form-control form-control-sm mr-2" type="search" placeholder="Search products" aria-label="Search" name="searchTerm">
                            <button class="btn btn-outline-success btn-sm my-2 my-sm-0" type="submit">Search</button>
                        </form>
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Contacts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <!-- Place inside the <ul class="navbar-nav flex-grow-1"> -->
                        <li class="nav-item">
                            <a href="#" class="nav-link text-dark" data-bs-toggle="modal" data-bs-target="#cartModal">
                                <i class="fas fa-shopping-cart"></i>
                                <span class="badge bg-primary">@ViewBag.CartCount</span> <!-- Replace with @ViewBag.CartCount once it's confirmed to work -->
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            <!-- Invoke Category Navigation View Component here -->
            @if (!ViewData.ContainsKey("HideCategoryNavigation"))
            {
                @await Component.InvokeAsync("CategoryNavigationViewComponent")
            }
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - OnlineGroceryStore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!-- Cart Modal -->
    <div class="modal fade" id="cartModal" tabindex="-1" aria-labelledby="cartModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="cartModalLabel">Shopping Cart</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Shopping Cart Items Will Be Loaded Here -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Continue Shopping</button>
                    <a href="@Url.Action("Checkout", "Order")" class="btn btn-primary">Proceed to Checkout</a>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('#cartModal').on('shown.bs.modal', function (e) {
                updateCartModal(); // Call the function to update the cart modal
            });
        });
    </script>
</body>
</html>
<script type="text/javascript">
    // Define a global object to hold action URLs
    var actionUrls = {
        cartIndexUrl: '@Url.Action("Index", "Cart")'
    };

    window.CartUrls = {
        addToCartUrl: '@Url.Action("AddToCart", "Cart")',
        removeFromCartUrl: '@Url.Action("RemoveFromCart", "Cart")',
        updateQuantityUrl: '@Url.Action("UpdateQuantity", "Cart")',
        clearCartUrl: '@Url.Action("ClearCart", "Cart")',
        getCartCountUrl: '@Url.Action("GetCartCount", "Cart")'
    };
</script>
<script src="~/js/site.js" asp-append-version="true"></script>

